<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".home_Health"
    android:background="@drawable/bg_isi">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/photo_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="45dp"
        android:text="Jenny Wilson"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="100dp"
        android:text="Make Your Style With"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="130dp"
        android:text="i Style ."
        android:textColor="#9F71FF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="195dp"
        android:background="@drawable/search_icon"/>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="606dp"
        android:layout_height="56dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/kolom"
        android:hint="Search"
        android:paddingLeft="45dp" />

    // Tombol

    <Button
        android:id="@+id/btn_beauty"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/kolombtn"
        android:clickable="true"
        android:paddingBottom="3dp"
        android:text="Beauty"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_fashion"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/kolombtn"
        android:onClick="pindah2"
        android:text="Fashion"
        android:textColor="#000000" />

    <Button
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/kolombtn"
        android:clickable="true"
        android:text="Health"
        android:textColor="@color/pink" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="300dp"
        android:paddingLeft="10dp"
        android:text="Article"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="300dp"
        android:clickable="true"
        android:text="More" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/garis"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="210dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/photo1_health" />


    // isi activities

    <ImageView
        android:layout_width="85dp"
        android:layout_height="106dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/photo2_health" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="106dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/photo3_health" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="106dp"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/photo4_health" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="550dp"
        android:paddingLeft="10dp"
        android:text="Activities"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="555dp"
        android:background="@drawable/garis" />

</RelativeLayout>