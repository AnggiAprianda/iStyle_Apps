<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chooseyour_outfit"
    android:background="@drawable/bg_isi">



    <Button
        android:id="@+id/btn_back"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/back_icon" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/photo_profile" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kolom"
            android:text="Outfit ke kampus"
            android:onClick="outfitKampus"
            android:textColor="#000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kolom"
            android:text="Outfit ke Mall"
            android:layout_marginTop="30dp"
            android:textColor="#000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kolom"
            android:text="Outfit ke Pantai"
            android:layout_marginTop="30dp"
            android:textColor="#000000"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kolom"
            android:text="Outfit ke  Kantor"
            android:layout_marginTop="30dp"
            android:textColor="#000000"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kolom"
            android:text="Outfit ke Pernikahan "
            android:layout_marginTop="30dp"
            android:textColor="#000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kolom"
            android:text="Outfit Wisuda"
            android:layout_marginTop="30dp"
            android:textColor="#000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kolom"
            android:text="Outfit  Nonton Konser"
            android:layout_marginTop="30dp"
            android:textColor="#000000"/>








    </LinearLayout>


</RelativeLayout>